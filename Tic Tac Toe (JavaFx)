    private void button2ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        if(count==0){
            button2.setLabel("1");
            arr[0][0]=1;
            check(arr);
            count++;
            count=count%2;
            label1.setText("Player 2 turn");
        }
        else{
            button2.setLabel("2");
            arr[0][0]=2;
            check(arr);
            count++;
            count=count%2;
            label1.setText("Player 1 turn");
            label1.setText("Player 1 turn");
        }
    }                                       

