    public static void check(int arr[][]){
        int i,j;
        for(i=0;i<3;i++){
            if(arr[i][0]==arr[i][1] && arr[i][0]==arr[i][2] && arr[i][2]!=0){
                //winn
                JOptionPane.showMessageDialog(null,"Player "+arr[i][0]+" wins!","Congrats",JOptionPane.ERROR_MESSAGE);
                break;
            }
        }
        for(i=0;i<3;i++){
            if(arr[0][i]==arr[1][i] && arr[0][i]==arr[2][i] && arr[0][i]!=0){
                //winn
                JOptionPane.showMessageDialog(null,"Player "+arr[0][i]+" wins!","Congrats",JOptionPane.ERROR_MESSAGE);
                break;
            }
        }
        if(arr[0][0]==arr[1][1] && arr[0][0]==arr[2][2] && arr[0][0]!=0){
            //win
            JOptionPane.showMessageDialog(null,"Player "+arr[1][1]+" wins!","Congrats",JOptionPane.ERROR_MESSAGE);
        }
        if(arr[0][2]==arr[1][1] && arr[0][2]==arr[2][0] && arr[0][2]!=0){
            //win
            JOptionPane.showMessageDialog(null,"Player "+arr[1][1]+" wins!","Congrats",JOptionPane.ERROR_MESSAGE);
        }
    }
