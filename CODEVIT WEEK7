import java.util.*;
class vit{
	public static void main(String[] main){
		Scanner in = new Scanner(System.in);
		int n= in.nextInt();
		int fn=2*n-1;
		int i,j;
		int c= fn-1;
		for(i=0;i<fn;i++){
			for(j=0;j<fn;j++){
				if(i==0 || i==fn-1 || j==0 || j==fn-1 || i==j || j==c)
					System.out.print("*  ");
				else
					System.out.print("   ");
			}
			c--;
			System.out.println("");
		}
	}
}
